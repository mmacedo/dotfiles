selectp -t 0                          # Select pane 0
splitw -h -p 50 'pry'                 # Split pane 0 vertically by 50%
selectp -t 1                          # Select pane 1
splitw -v -p 50 'bundle exec guard'   # Split pane 1 horizontally by 50%
selectp -t 0                          # Select pane 0